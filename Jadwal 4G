    <script>
        // Data jadwal shift untuk tahun 2026 (pattern dari data 2024, menyesuaikan hari)
        // Pattern shift 4G system (A, B, C, D dengan pola berputar)
        const generateShiftPattern = () => {
            const pattern = [];
            const shifts = ['A', 'B', 'C', 'D'];
            let currentShift = 0;
            
            // Pattern: 5 hari kerja, 2 hari libur (berdasarkan contoh data)
            for (let i = 0; i < 365; i++) {
                // Simulasi pattern shift
                if (i % 7 < 5) { // 5 hari kerja
                    pattern.push(shifts[currentShift % 4]);
                } else { // 2 hari libur
                    pattern.push('0');
                }
                
                // Ganti shift setiap 5 hari kerja
                if (i % 5 === 4) {
                    currentShift++;
                }
            }
            
            return pattern;
        };

        // Data shift 2026 (menggunakan pola dari data yang diberikan, disesuaikan)
        const shiftData2026 = {
            "1": { // Januari 2026 (31 hari, mulai Kamis)
                days: 31,
                startDay: 4, // 1 Jan 2026 = Kamis (0=Minggu, 1=Senin, ..., 6=Sabtu)
                shifts: {
                    "I": generateJanuaryShifts("I"),
                    "II": generateJanuaryShifts("II"),
                    "III": generateJanuaryShifts("III")
                }
            },
            "2": { // Februari 2026 (28 hari)
                days: 28,
                startDay: 0, // 1 Feb 2026 = Minggu
                shifts: {
                    "I": generateShiftArray(28, "I", 31),
                    "II": generateShiftArray(28, "II", 31),
                    "III": generateShiftArray(28, "III", 31)
                }
            },
            "3": { // Maret 2026 (31 hari)
                days: 31,
                startDay: 0, // 1 Mar 2026 = Minggu
                shifts: {
                    "I": generateShiftArray(31, "I", 59),
                    "II": generateShiftArray(31, "II", 59),
                    "III": generateShiftArray(31, "III", 59)
                }
            },
            "4": { // April 2026 (30 hari)
                days: 30,
                startDay: 3, // 1 Apr 2026 = Rabu
                shifts: {
                    "I": generateShiftArray(30, "I", 90),
                    "II": generateShiftArray(30, "II", 90),
                    "III": generateShiftArray(30, "III", 90)
                }
            },
            "5": { // Mei 2026 (31 hari)
                days: 31,
                startDay: 5, // 1 Mei 2026 = Jumat
                shifts: {
                    "I": generateShiftArray(31, "I", 120),
                    "II": generateShiftArray(31, "II", 120),
                    "III": generateShiftArray(31, "III", 120)
                }
            },
            "6": { // Juni 2026 (30 hari)
                days: 30,
